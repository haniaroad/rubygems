<div class="card">
  <div class="card-header">
    <div class="fa fa-book">
    <%= link_to course.title, course_path(course) %>
    </div>
  </div>
  <div class="card-body">
    <%= course.description %>
  </div>
  <div class="card-footer">
      <div class="far fa-clock">
        <%= course.created_at.strftime('%d-%b-%Y') %>
      </div>
      <div class="row">
      </div>
    <div class="fa fa-chalkboard-teacher">
        <%= course.user %>
    </div>
  </div>
  <div class="card-footer">
        <%= link_to 'Show', course, class: 'btn-sm btn-primary' %>
        <%= link_to 'Edit', edit_course_path(course), class: 'btn-sm btn-warning' %>
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' %>
    </div>  
</div>